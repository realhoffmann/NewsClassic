<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:http="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="16dp"
    android:visibility="visible"
    http:layout_constraintBottom_toBottomOf="@+id/news_nr_id"
    http:layout_constraintTop_toBottomOf="@+id/news_nr_id">

    <TextView
        android:id="@+id/tv_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        http:layout_constraintEnd_toEndOf="@+id/iv_item"
        http:layout_constraintStart_toEndOf="@+id/iv_item"
        http:layout_constraintTop_toBottomOf="@+id/iv_item"
        tools:layout_conversion_absoluteHeight="19dp"
        tools:layout_conversion_absoluteWidth="0dp" />

    <ImageView
        android:id="@+id/iv_item"
        android:layout_width="100dp"
        android:layout_height="100dp"
        http:layout_constraintStart_toStartOf="parent"
        http:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_absoluteHeight="60dp"
        tools:layout_conversion_absoluteWidth="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
